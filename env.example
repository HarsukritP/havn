# Havn Environment Variables
# ====================================
# SECURITY: Copy this file to .env and replace ALL placeholder values
# NEVER commit .env file to git! It's already in .gitignore
# ====================================

# Database Configuration
# Generate strong passwords: openssl rand -base64 32
POSTGRES_USER=havn
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
POSTGRES_DB=havn_dev

# Backend Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=havn
DB_PASSWORD=CHANGE_ME_USE_SAME_AS_POSTGRES_PASSWORD
DB_NAME=havn_dev
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
# CRITICAL: Generate a strong random secret!
# Example: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_RANDOM_STRING_MINIMUM_32_CHARS
JWT_EXPIRY_HOURS=168

# Server Configuration
PORT=8080
GIN_MODE=debug

# AWS S3 (for photo uploads)
AWS_REGION=us-east-1
AWS_BUCKET=havn-photos
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring & Analytics
SENTRY_DSN=
MIXPANEL_TOKEN=

# Environment
ENV=development

# ====================================
# Setup Instructions:
# ====================================
# 1. Copy this file: cp env.example .env
# 2. Generate strong passwords:
#    - POSTGRES_PASSWORD: openssl rand -base64 32
#    - JWT_SECRET: openssl rand -base64 64
# 3. Update all CHANGE_ME values
# 4. NEVER commit .env to git!
# ====================================

